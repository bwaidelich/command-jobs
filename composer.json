{
  "name": "wwwision/command-jobs",
  "description": "Coordinate execution of one-time commands",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Bastian Waidelich",
      "email": "b.waidelich@wwwision.de"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/bwaidelich"
    },
    {
      "type": "paypal",
      "url": "https://www.paypal.me/bwaidelich"
    }
  ],
  "require": {
    "php": ">=8.4",
    "symfony/yaml": "^7.3",
    "symfony/process": "^7.3",
    "symfony/console": "^7.3",
    "webmozart/assert": "^1.11",
    "psr/clock": "^1.0"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpstan/phpstan": "^2",
    "squizlabs/php_codesniffer": "^4.0.x-dev",
    "phpunit/phpunit": "^12.3"
  },
  "suggest": {
    "doctrine/dbal": "Required for the database adapter"
  },
  "autoload": {
    "psr-4": {
      "wwwision\\commandJobs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "wwwision\\commandJobs\\tests\\": "tests/"
    }
  },
  "bin": ["bin/command-jobs"],
  "scripts": {
    "test:cs": "phpcs --colors src",
    "test:cs:fix": "phpcbf --colors src",
    "test:phpstan": "phpstan",
    "test:phpunit": "phpunit",
    "test": [
      "@test:cs",
      "@test:phpstan",
      "@test:phpunit"
    ]
  }
}
